/* pages/movie/movie-detail/celebrity/celebrity.wxss */
@import "/pages/movie/movie-grid/movie-grid-template.wxss";

.container {
  background: #fff;
}

.session-poster {
  display: flex;
  align-items: center;
  width: 100%;
  background: #e9e9e9;
}

.session-poster-spacing {
  padding-top: 30rpx;
  padding-bottom: 40rpx;
}

.session-poster .poster {
  display: inline-block;
  margin: 0rpx auto;
  text-align: center;
  width: 300rpx;
  height: 440rpx;
}

.summary-session {
  display: flex;
  flex-direction: row;
  height: 200rpx;
  align-items: center;
}

.celebrity-summary {
  display: flex;
  flex-direction: column;
  width: 500rpx;
  margin: 30rpx 30rpx 30rpx 30rpx;
}

.celebrity-summary .name {
  width: 100%;
  color: #4a4a4a;
  font-size: 42rpx;
  font-weight: 700;
  line-height: 1.6;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}


.works-scroll {
  width: 100%;
  white-space: nowrap;
}
